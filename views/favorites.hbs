</nav>

<div style="
    background-image : url('https://media.istockphoto.com/id/1026205392/es/foto/exterior-casa-hermosa-de-lujo-en-el-crep%C3%BAsculo.jpg?s=612x612&w=0&k=20&c=2weHZmlYGLEeR-fepd3vtKk1zVpB6bfLkedtqzBi2jM=');
    height: 100vh;
    background-repeat: no-repeat;
    background-size: cover;

  ">
    <div class="container bg-transparent text-center   bg-transparent" style="width:50%">

        <h2 class="text-center bg-transparent text-white ">Favorites</h2>


        <div class="rounded" id="accordion">

            {{#each favorites}}
            <div class="card ">
                <div class="card-header rounded" id="heading{{@index}}">
                    <h5 class="mb-0">
                        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse{{@index}}"
                            aria-expanded="false" aria-controls="collapse{{@index}}">
                            {{this.location}}
                        </button>
                    </h5>
                </div>
                <div id="collapse{{@index}}" class="collapse" aria-labelledby="heading{{@index}}"
                    data-parent="#accordion">
                    <div class="card-body">
                        <h5>Location: {{this.location}}</h5>
                        <h5>Price: {{this.price}}</h5>
                        <p>Description: {{this.type}}</p>
                    </div>
                </div>
            </div>

            {{/each}}
        </div>

    </div>
</div>

